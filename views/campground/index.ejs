
<% layout('layouts/boilerplate') %>

  <div id="map" style="width: 100%; height: 500px;">
    </div>




    <h1 class="mt-5">All campgrounds</h1>

    

    <% for(let camp of camps){ %>

    <div class="card mb-3" >

        <div class="row">

            <div class="col-md-4">
              
              <% if(camp.images.length){ %>
              
                <img  crossorigin="anonymous" src="<%= camp.images[0].url %>" alt="" class="card-img-top">
                
              <% }else{ %>
                <img crossorigin="anonymous" src="https://res.cloudinary.com/drxvblkym/image/upload/v1709382127/YELP%20CAMP/z3dl5hy89nu9tartfdel.jpg" alt="" class="card-img-top">
              <% } %>
            </div>

            <div class="col-md-8">

                <div class="card-body">
                          <h5 class="card-title"><%= camp.title %> </h5>
                          <p class="card-text"><%= camp.description %></p>
                          <p class="card-text  ">
                                <small class="  text-sm fw-semibold">  <%= camp.location %>  </small>
                          </p>
                           
                          <a href="campgrounds/<%= camp.id %>" class=" btn btn-primary" role="btn">View</a>

                  </div>
        
             </div>

        </div>
        
</div>

      
    

    <%} %>

    <script>
      const mapToken='<%-process.env.MAPBOX_TOKEN %>';
      let result={features:JSON.parse( '<%- JSON.stringify(camps) %>') };
      // result=JSON.parse(result);
    </script>

    <script src="/javascript/clusterMap.js"></script>
    
  </body>
</html>


