<% layout('layouts/boilerplate') %>
<div    style="display: flex; justify-content: center; align-items: center;" >


  <div  style="width: 28rem; margin-bottom: 20px;">
    <img src="https://images.unsplash.com/photo-1595206133361-b1fe343e5e23?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top"   alt="...">
   
    <div class="card-body ">

      <h5 class="card-title">REGISTER</h5>
   
   
    
 
    <form action="/register" method="post"  class="needs-validation" novalidate >
    
        <div class="mb-3">
            <label   class="form-label"  for="username">Username:</label>
            <input  class="form-control"  type="text" id="username" name="username" autofocus   required/>
          </div>
    
          <div class="mb-3">
            <label   class="form-label"  for="email">Email:</label>
            <input  class="form-control"  type="email" id="email" name="email" required/>
          </div>
          
          <div class="mb-3">
            <label   class="form-label"  for="passowrd">Password:</label>
            <input  class="form-control"  type="password" id="password" name="password" required/>
          </div>
    
    
          <div class="d-grid gap-2 ">
            <button class="btn btn-success ">Register</button>
          
          </div>
    
    </form>
    
      </div>
 
 
 
  </div>
  

</div>